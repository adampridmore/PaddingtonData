<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <context-param>
        <param-name>mongo_system_systemMongoUri</param-name>
        <param-value>mongodb://MNAB-DEV15L:30000,MNAB-DEV15L:30001,MNAB-DEV15L:30002/Test_System</param-value>
    </context-param>

    <context-param>
        <param-name>mongo_system_customersSharedMongoUri</param-name>
        <param-value>mongodb://MNAB-DEV15L:30000,MNAB-DEV15L:30001,MNAB-DEV15L:30002/Test_System_CustomersShared</param-value>
    </context-param>

    <servlet>
        <servlet-name>adminWebPages</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminWebPages</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
